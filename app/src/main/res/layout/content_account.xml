<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kohjingyu.lemons.AccountActivity"
    tools:showIn="@layout/app_bar_account"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="logout"
        android:text="Logout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="123dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteY="112dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/statsButton"
        android:onClick="loadStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardButton"
        tools:layout_editor_absoluteX="207dp" />

    <Button
        android:id="@+id/shopButton"
        android:onClick="loadShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/friendsButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/friendsButton" />

    <Button
        android:id="@+id/leaderboardButton"
        android:onClick="loadLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        tools:layout_editor_absoluteY="356dp"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/friendsButton"
        android:onClick="loadFriends"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Friends"
        app:layout_constraintTop_toTopOf="@+id/leaderboardButton"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/leaderboardButton"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
