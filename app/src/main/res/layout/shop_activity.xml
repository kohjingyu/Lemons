<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kohjingyu.lemons.shop.ShopActivity"
    android:orientation="vertical"
    android:background="@drawable/activitybackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/fab_margin_small"
            android:src="@drawable/savebutton"
            android:background="@android:color/transparent"
            android:onClick="onClickSaveEquipments"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopbar"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avatarName"
                android:fontFamily="@font/adobe_gothic_bold"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/shop_container_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</LinearLayout>
